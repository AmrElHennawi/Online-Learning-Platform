@model UserEditViewModel

@{
    ViewBag.Title = "Edit User";
}

<form method="post">
    <div class="container">
        <h2>User Details</h2>

        <div class="form-group">
            <label>First Name:</label>
            <input asp-for="User.FirstName" hidden />
            <p>@Model.User.FirstName</p>
        </div>

        <div class="form-group">
            <label>Last Name:</label>
            <input asp-for="User.LastName" hidden />
            <p>@Model.User.LastName</p>
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input asp-for="User.Email" hidden />
            <p>@Model.User.Email</p>
        </div>

        <div class="form-group mb-2">
            <label>User Type:</label>
            <select asp-for="Role" asp-items="Model.SelectedRoles" name="NewRole" class="form-control" >
            </select>
        </div>

        <input asp-for="User.Id" name="userId" hidden />
        <button type="submit" class="btn btn-primary">Update Role</button>
    </div>
</form>